<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.community">
	<resultMap id="communityResult" type="communityVO" >
		<result property="c_no" column="c_no" />
		<result property="c_title" column="c_title" />
		<result property="c_content" column="c_content" />
		<result property="c_date" column="c_date" />
		<result property="id" column="id" />	
	</resultMap>
	<resultMap id="pagingResult" type="int" >
		<result property="nowPage" column="nowPage" />
		<result property="nowBlock" column="nowBlock" />
		<result property="numPerPage" column="numPerPage" />
		<result property="pagePerBlock" column="pagePerBlock" />
		<result property="totalRecord" column="totalRecord" />	
		<result property="totalPage" column="totalPage" />
		<result property="totalBlock" column="totalBlock" />
		<result property="begin" column="begin" />
		<result property="end" column="end" />
		<result property="beginPage" column="beginPage" />
		<result property="endPage" column="endPage" />
	</resultMap>
	
	
	<!-- 전체 게시글 갯수 조회 -->
	<select id="totalCount" resultType="int">
		SELECT COUNT(*) FROM c_board
	</select>
	
	<!-- 페이지에 표시할 게시글 조회 -->
	<select id="selectAllCommunityList" resultMap="communityResult">
		
		SELECT *
		  FROM (SELECT ROWNUM R_NUM, B.*
		          FROM (SELECT *
		                  FROM c_board
		                 ORDER BY c_no DESC
		               ) B 
		       )
		 WHERE R_NUM BETWEEN #{begin, jdbcType=VARCHAR} AND #{end, jdbcType=VARCHAR}
	</select>
	

	<!-- <select id="selectAllCommunityList" resultMap="communityResult"   >
    <![CDATA[
   		  SELECT c_no, c_title, c_content, c_date, id
          from c_board	
    ]]>
  </select> -->
  
  
  	
  	<!--단일이미지 추가  -->
  	<insert id="insertNewCommunity"  parameterType="java.util.Map">
			INSERT into c_board( c_no, c_title, c_content, id)
			VALUES(#{c_no}, #{c_title}, #{c_content}, #{id})
	</insert>
	
  	<select id="selectNewC_no" resultType="int"  >
		<![CDATA[
			SELECT  nvl(max(c_no), 0) + 1 from c_board		
		]]>
	</select>
	
 	 <select id="selectCommunity" resultType="communityVO"   parameterType="int">
    <![CDATA[
    	SELECT * from c_board
        where c_no = #{c_no}	
    ]]>
 	 </select>
  
  	<update id="updateCommunity"  parameterType="java.util.Map">
		update c_board
		set c_title=#{c_title},	 
		c_content=#{c_content}
		where c_no=#{c_no}	
	</update>
	
	<delete id="deleteCommunity"  parameterType="int">
   		  <![CDATA[
   		 delete from c_board
      	 where c_no = #{c_no}
          ]]>  
  	</delete>
  	

