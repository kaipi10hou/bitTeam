<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.board">
	<resultMap id="articlesResult" type="articleVO">
		<result property="id" column="id" />
		<result property="articleNO" column="articleNO" />
		<result property="title" column="title" />
		<result property="content" column="content" />
		<result property="price" column="price" />
		<result property="imageFileName" column="imageFileName" />
		<result property="writeDate" column="writeDate" />
		<result property="location" column="location" />
		<result property="loc_x" column="loc_X" />
		<result property="loc_y" column="loc_y" />
		<result property="genre" column="genre" />
		<result property="way" column="way" />
		<result property="condition" column="condition" />				
	</resultMap>
	
 
  <resultMap id="imgResult" type="aImageVO">
	  <result property="imageFileNO" column="imageFileNO" />
	  <result property="articleNO" column="articleNO" />
	  <result property="imageFileName" column="imageFileName" />
 </resultMap>
 
   <resultMap id="thumbResult" type="thumbnailVO">
	  <result property="articleNO" column="ai.articleNO" />
	  <result property="title" column="a.title" />
	  <result property="price" column="a.price" />
	   <result property="imageFileName" column="ai.imageFileName" />
	    <result property="imageFileNO" column="ai.imageFileNO" />
	      <result property="loc_x" column="a.loc_x" />
	        <result property="loc_y" column="a.loc_y" />
 </resultMap>
 
 

<select id="selectAllArticlesList" resultMap="articlesResult"   >
    <![CDATA[
      SELECT id, articleNO, title, content, writeDate, imageFileName, genre, way, condition
      from article
    ]]>
  </select>
  
  
   <select id="selectAllThumbnailsList" resultMap="thumbResult" >
     <![CDATA[
      SELECT ai.articleNO, a.title, a.price, ai.imageFileName, a.loc_x, a.loc_y, a.writeDate,
      CASE MOD(ai.imageFileNO, 3) WHEN 1 THEN ai.imageFileNO
      ELSE 0
      END imagefileno
      FROM article a, aimagefile ai 
      WHERE a.articleNO = ai.articleNO
      AND MOD(ai.imageFileNO, 3) = 1
      ORDER BY ai.imageFileNO
    ]]>
  </select>
  	

			
  	<select id="selectNewArticleNO" resultType="int"  >
		<![CDATA[
			SELECT  nvl(max(articleNO), 0) + 1 from article		
		]]>
	</select>
	
 	 <select id="selectArticle" resultType="articleVO"   parameterType="int">
    <![CDATA[
      SELECT * from article
      where articleNO = #{articleNO}		
    ]]>
 	 </select>
  
  	<update id="updateArticle"  parameterType="java.util.Map">
					update article
			set title=#{title},	 
			content=#{content},
			price=#{price},
			loc_x=#{loc_x},
			loc_y=#{loc_y}
			where articleNO=#{articleNO}
	</update>
		
	
	<delete id="deleteArticle"  parameterType="int">
      delete from article
      where articleNO=#{articleNO}
   	</delete>  
  
  	 <!--  , genre, way, condition --> <!-- , #{genre}, #{way}, #{condition} -->
  	 
  	  <insert id="insertNewArticle"  parameterType="java.util.Map">
    <![CDATA[
    INSERT into article( id, articleNO, title, content, loc_x, loc_y, price)         
			VALUES(#{id}, #{articleNO}, #{title}, #{content}, #{loc_x}, #{loc_y}, #{price})  
    ]]>      
  </insert>

 
   <insert id="insertNewImage"  parameterType="java.util.Map">
    <foreach item="item"  collection="list"   open="INSERT ALL" 
                  separator=" " close="SELECT * FROM DUAL" >
      INTO aImageFile(imageFileNO, imageFileName, regDate, articleNO)
      VALUES (#{item.imageFileNO}, #{item.imageFileName},  sysdate, #{item.articleNO})
    </foreach>
  </insert>
  	
<!--   	<delete id="deleteImageFile"  parameterType="int">
      delete from aImageFile
      where articleNO=#{articleNO}
   	</delete>  	
  	 -->
  	
  	
  	
  	  <select id="selectNewImageFileNO" resultType="int"  >
    <![CDATA[
      SELECT  nvl(max(imageFileNO),0) from aImageFile		
    ]]>
  </select>
	

  <select  id="selectImageFileList" resultMap="imgResult" parameterType="int">
    <![CDATA[
      SELECT * from aImageFile
      where articleNO=#{articleNO}	
    ]]>
  </select> 
  
    
  
  


</mapper>