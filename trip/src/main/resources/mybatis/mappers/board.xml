<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.board">
	<resultMap id="communitysResult" type="communityVO">
		<result property="id" column="id" />
		<result property="a_no" column="a_no" />
		<result property="a_title" column="a_title" />
		<result property="a_content" column="a_content" />
		<result property="a_price" column="a_price" />
		<result property="img_1" column="img_1" />
		<result property="img_2" column="img_2" />
		<result property="img_3" column="img_3" />
		<result property="a_date" column="a_date" />
		<result property="location" column="location" />
		<result property="loc_x" column="loc_X" />
		<result property="loc_y" column="loc_y" />
		<result property="genre" column="genre" />
		<result property="way" column="way" />
		<result property="condition" column="condition" />				
	</resultMap>
	
 <resultMap id="imgResult" type="imageVO">
	  <result property="imageFileNO" column="imageFileNO" />
	  <result property="communityNO" column="communityNO" />
	  <result property="imageFileName" column="imageFileName" />
 </resultMap>

  <select id="selectAllArticlesList" resultMap="communitysResult"   >
    <![CDATA[
      SELECT level, communityNO, parentNO, title, content, writeDate, imageFileName, id
      from t_board
      START WITH  parentNO=0
      CONNECT BY PRIOR communityNO=parentNO 
      ORDER SIBLINGS BY communityNO DESC		
    ]]>
  </select>
  	
  	<!--단일이미지 추가  -->
  	<insert id="insertNewArticle"  parameterType="java.util.Map">
			INSERT into article( id, a_no, a_title, a_content, img_1,img_2,img_3)       <!--  , genre, way, condition -->
			VALUES(#{id}, #{a_no}, #{a_title}, #{a_content}, #{img_1},#{img_2},#{img_3})  <!-- , #{genre}, #{way}, #{condition} -->
	</insert>
	
  <select id="selectNewArticleNO" resultType="int"  >
		<![CDATA[
			SELECT  nvl(max(communityNO), 0) + 1 from t_board		
		]]>
	</select>
	
  <select id="selectArticle" resultType="communityVO"   parameterType="int">
    <![CDATA[
      SELECT * from t_board
      where communityNO = #{communityNO}		
    ]]>
  </select>
  
  <update id="updateArticle"  parameterType="java.util.Map">
			update t_board
			set title=#{title},	 
			content=#{content}
			 <if test="imageFileName!='' and imageFileName!=null">
			  , imageFileName=#{imageFileName}
			</if>
			where communityNO=#{communityNO}
	</update>
	
	<delete id="deleteArticle"  parameterType="int">
    <![CDATA[
      delete from t_board
      where communityNO in (
         SELECT communityNO FROM  t_board
         START WITH communityNO = #{communityNO}
         CONNECT BY PRIOR  communityNO = parentNO )
    ]]>      
  </delete>

 <!--다중 이미지 추가 SQL문 -->   
 
    <insert id="insertNewArticle"  parameterType="java.util.Map">
    <![CDATA[
      insert into t_board(communityNO, id, title, content, imageFileName)
      values(#{communityNO}, #{id}, #{title}, #{content}, null)
    ]]>      
  </insert>

 
   <insert id="insertNewImage"  parameterType="java.util.Map">
    <foreach item="item"  collection="list"   open="INSERT ALL" 
                  separator=" " close="SELECT * FROM DUAL" >
      INTO t_imageFile(imageFileNO, imageFileName, communityNO, regDate)
      VALUES (#{item.imageFileNO}, #{item.imageFileName}, #{item.communityNO}, sysdate)
    </foreach>
  </insert>
 
 
  <select id="selectNewImageFileNO" resultType="int"  >
    <![CDATA[
      SELECT  nvl(max(imageFileNO),0) from t_imageFile		
    ]]>
  </select>
	

  <select  id="selectImageFileList" resultMap="imgResult" parameterType="int">
    <![CDATA[
      SELECT * from t_imageFile
      where communityNO=#{communityNO}	
    ]]>
  </select> 
  
</mapper>