<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.board">
	<resultMap id="articlesResult" type="articleVO">
		<result property="id" column="id" />
		<result property="a_no" column="a_no" />
		<result property="a_title" column="a_title" />
		<result property="a_content" column="a_content" />
		<result property="a_price" column="a_price" />
		<result property="imageFileName" column="imageFileName" />
		<result property="a_date" column="a_date" />
		<result property="location" column="location" />
		<result property="loc_x" column="loc_X" />
		<result property="loc_y" column="loc_y" />
		<result property="genre" column="genre" />
		<result property="way" column="way" />
		<result property="condition" column="condition" />				
	</resultMap>
	
  
  <resultMap id="imgResult" type="aImageVO">
	  <result property="imageFileNO" column="imageFileNO" />
	  <result property="a_no" column="a_no" />
	  <result property="imageFileName" column="imageFileName" />
 </resultMap>

<select id="selectAllArticlesList" resultMap="articlesResult"   >
    <![CDATA[
      SELECT id, a_no, a_title, a_content, a_date, imageFileName, genre, way, condition
      from article
    ]]>
  </select>
  	

			
  	<select id="selectNewArticleNO" resultType="int"  >
		<![CDATA[
			SELECT  nvl(max(a_no), 0) + 1 from article		
		]]>
	</select>
	
 	 <select id="selectArticle" resultType="articleVO"   parameterType="int">
    <![CDATA[
      SELECT * from article
      where a_no = #{a_no}		
    ]]>
 	 </select>
  
  	<update id="updateArticle"  parameterType="java.util.Map">
		
	</update>
	
	<delete id="deleteArticle"  parameterType="int">
      delete from article
      where a_no in (
         SELECT a_no FROM  article
          )
  	</delete>  
  
  	 <!--  , genre, way, condition --> <!-- , #{genre}, #{way}, #{condition} -->
  	 
  	  <insert id="insertNewArticle"  parameterType="java.util.Map">
    <![CDATA[
    INSERT into article( id, a_no, a_title, a_content)         
			VALUES(#{id}, #{a_no}, #{a_title}, #{a_content})  
    ]]>      
  </insert>

 
   <insert id="insertNewImage"  parameterType="java.util.Map">
    <foreach item="item"  collection="list"   open="INSERT ALL" 
                  separator=" " close="SELECT * FROM DUAL" >
      INTO a_imageFile(imageFileNO, imageFileName, regDate, a_no)
      VALUES (#{item.imageFileNO}, #{item.imageFileName},  sysdate, #{item.a_no})
    </foreach>
  </insert>
  	
  	
  	
  	
  	
  	
  	  <select id="selectNewImageFileNO" resultType="int"  >
    <![CDATA[
      SELECT  nvl(max(imageFileNO),0) from a_imageFile		
    ]]>
  </select>
	

  <select  id="selectImageFileList" resultMap="imgResult" parameterType="int">
    <![CDATA[
      SELECT * from a_imageFile
      where a_no=#{a_no}	
    ]]>
  </select> 


</mapper>