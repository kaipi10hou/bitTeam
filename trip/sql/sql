drop table trip_member;
drop table kakao_profile;
drop table aImageFile;
drop table article;
drop table c_board;

commit;

create table trip_member(
	id varchar2(20)  primary key,
	name varchar2(20), 
	email varchar2(40), 
	pwd varchar2(20)
	profile_img varchar2(1000) not null;
);
	
	 alter table trip_member add profile_img varchar2(1000) default '-' not null;
	 
create table kakao_profile (id varchar2(20) , profileImage varchar2(100), jagisogae varchar2(200));
select * from kakao_profile;

create table aImageFile(
	imageFileNO number(10) primary key,
	imageFileName varchar2(50),
	regDate date default sysdate,
	articleNO number(10),
	constraint fk_articleNO foreign key(articleNO) references article(articleNO) on delete cascade
);


 create table article(
       id varchar(20),
       articleNO number primary key,
       title varchar2(100),
       content varchar2(2000),
       price number,
       imageFileName varchar2(1000), 
       writeDate date DEFAULT sysdate,
       location varchar2(1000),
       loc_x number,
       loc_y number,
       genre varchar2(100),
       way varchar2(100),
       condition varchar2(1000)
       );
              
create table c_board(
		c_no number(10) primary key,
		c_title varchar2(500) not null,
		c_content varchar2(4000),
		c_date date default sysdate,
		id varchar2(20),
		CONSTRAINT FK_ID FOREIGN KEY(id)
		REFERENCES trip_member(id)
);
