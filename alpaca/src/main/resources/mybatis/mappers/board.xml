<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.board">
	<resultMap id="articlesResult" type="articleVO">
		<result property="id" column="id" />
		<result property="articleNO" column="articleNO" />
		<result property="title" column="title" />
		<result property="content" column="content" />
		<result property="price" column="price" />
		<result property="imageFile1" column="imageFile1" />
		<result property="imageFile2" column="imageFile2" />
		<result property="imageFile3" column="imageFile3" />
		<result property="writeDate" column="writeDate" />
		<result property="location" column="location" />
		<result property="loc_x" column="loc_X" />
		<result property="loc_y" column="loc_y" />		
	</resultMap>
	
 
<select id="selectAllArticlesList" resultMap="articlesResult"   >
    <![CDATA[
      SELECT id, articleNO, title, content, writeDate, imageFile1,loc_x, loc_y, price
      from article
    ]]>
  </select>
 			
  	<select id="selectNewArticleNO" resultType="int"  >
		<![CDATA[
			SELECT  nvl(max(articleNO), 0) + 1 from article		
		]]>
	</select>
	
 	 <select id="selectArticle" resultType="articleVO"   parameterType="int">
    <![CDATA[
      SELECT * from article
      where articleNO = #{articleNO}		
    ]]>
 	 </select>
  
  	<update id="updateArticle"  parameterType="java.util.Map">
					update article
			set 
			imageFile1=#{imageFile1},
			imageFile2=#{imageFile2},
			imageFile3=#{imageFile3},
			title=#{title},	 
			content=#{content},
			price=#{price},
			loc_x=#{loc_x},
			loc_y=#{loc_y}
			where articleNO=#{articleNO}
	</update>
		
	
	<delete id="deleteArticle"  parameterType="int">
      delete from article
      where articleNO=#{articleNO}
   	</delete>  
  
  	 <!--  , genre, way, condition --> <!-- , #{genre}, #{way}, #{condition} -->
  	 
  	  <insert id="insertNewArticle"  parameterType="java.util.Map">
    <![CDATA[
    INSERT into article( id, articleNO, title, content, loc_x, loc_y, price, imageFile1, imageFile2, imageFile3)         
			VALUES(#{id}, #{articleNO}, #{title}, #{content}, #{loc_x}, #{loc_y}, #{price}, #{imageFile1}, #{imageFile2}, #{imageFile3})  
    ]]>      
  </insert>
  	

</mapper>